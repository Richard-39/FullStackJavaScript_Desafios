<h1>Skate Park</h1>

    <div class="py-4">
      <h2>Administración</h2>
      <hr class="w-50" />

      <table class="table w-50 m-auto">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
          {{#each skaters}}
          <tr>
            <th scope="row">{{this.id}}</th>
              <td><img src="{{this.foto}}" alt="skater's picture" width="50" height="50"></td>
              <td>{{this.nombre}}</td>
              <td>{{this.anos_experiencia}}</td>
              <td>{{this.especialidad}}</td>
              <td><input id="{{this.id}}estado" type="checkbox" onclick="save({{this.id}});" {{#if estado}}checked{{/if}}/></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      function save(idCheck) {
        var estadoCheck = document.getElementById(idCheck+'estado').checked;

        let data = {
        id: idCheck,
        estado: estadoCheck
        };
        console.log(data);
        axios.post('/admin', data).then(); 
       }
    </script>