    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />
      {{#if messaje}}
      <h2>{{messaje}}</h2>
      {{/if}}
      <form action='/registro', method="POST" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" name='email'/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" name='name'/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input type ='password' class="form-control m-auto" name='password1'/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input type ='password' class="form-control m-auto" name='password2'/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input class="form-control m-auto" name='anios'/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" name='especiality'/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input type="file" name='img'/>
          </div>
        </div>
        <button class="btn btn-info mb-3">Registrarme</button>
        <p><a href="/"> Iniciar sesión</a></p>
      </form>
    </div>